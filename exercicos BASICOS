#-- Imprima os números de 1 a 10 

for i in range(1, 11): 
    print(i) 
    
#------------------------------------------------------------------  

#-- Imprima todos os números pares de 0 a 20 

for i in range(0, 21, 2): 
    print(i) 
    
#------------------------------------------------------------------------  

#-- Some todos os números de 1 a 100 

soma = 0 
for i in range(1, 101): 
    soma += i 
print("Soma:", soma) 

#-----------------------------------------------------------------
  
